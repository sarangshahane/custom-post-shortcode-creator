{
	"name": "custom-post-shortcode-creator",
	"version": "1.0.1",
	"description": "Create Shortcodes for any custom Post types.",
	"main": "Gruntfile.js",
	"scripts": {
		"build": "grunt minify",
		"pretty": "prettier --check .",
		"pretty:fix": "prettier --write .",
		"lint-js": "wp-scripts lint-js",
		"lint-js:fix": "npm run pretty:fix && npm run lint-js -- --fix",
		"lint-css": "wp-scripts lint-style",
		"lint-css:fix": "npm run lint-css -- --fix",
		"lint-pkg-json": "wp-scripts lint-pkg-json",
		"packages-update": "wp-scripts packages-update",
		"i18n": "grunt textdomain && wp i18n make-pot . --exclude=\".github,scripts,node_modules,package.json,package-lock.json,Gruntfile.js,*.json\" languages/custom-post-shortcode-creator.pot --domain=custom-post-shortcode-creator --debug",
		"i18n:po": "wp i18n update-po languages/custom-post-shortcode-creator.pot",
		"i18n:mo": "wp i18n make-mo languages",
		"i18n:json": "wp i18n make-json languages --no-purge",
		"i18n:all": "npm run i18n && npm run i18n:po && npm run i18n:mo && npm run i18n:json",
		"release": "grunt release"
	},
	"dependencies": {
		"autoprefixer": "^10.4.14",
		"cssnano": "^6.0.1",
		"postcss": "^8.4.24"
	},
	"devDependencies": {
		"@wordpress/eslint-plugin": "^14.0.0",
		"@wordpress/prettier-config": "^2.0.0",
		"@wordpress/scripts": "^26.0.0",
		"grunt": "^1.6.1",
		"grunt-bumpup": "^0.6.3",
		"grunt-contrib-clean": "^2.0.0",
		"grunt-contrib-compress": "^2.0.0",
		"grunt-contrib-copy": "^1.0.0",
		"grunt-contrib-cssmin": "^5.0.0",
		"grunt-contrib-uglify": "^5.2.2",
		"grunt-postcss": "^0.9.0",
		"grunt-rtlcss": "^2.0.2",
		"grunt-text-replace": "^0.4.0",
		"grunt-wp-i18n": "^1.0.3",
		"load-grunt-tasks": "^5.1.0",
		"postcss-flexibility": "^2.0.0",
		"prettier": "npm:wp-prettier@^2.8.5",
		"wp-prettier": "^2.8.5"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/your-username/custom-post-shortcode-creator.git"
	},
	"author": "Sarang Shahane",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"wordpress",
		"plugin",
		"shortcode",
		"custom-post-type",
		"workshop"
	]
} 